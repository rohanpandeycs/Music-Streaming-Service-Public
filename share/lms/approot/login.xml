
<?xml version="1.0" encoding="UTF-8" ?>
<messages xmlns:if="Wt.WTemplate.conditions">

<message id="Lms.Auth.template">
	<div class="container">
		<form class="row mt-3 justify-content-md-center">
			<div class="col-lg-6">
				<div class="row g-3">
					<h2>${tr:Lms.Auth.welcome}</h2>
					<div class="col-12">
						<label class="form-label" for="${id:login-name}">
							${tr:Lms.login}
						</label>
						${login-name class="form-control"}
						<div class="invalid-feedback">
							${login-name-info}
						</div>
					</div>
					<div class="col-12">
						<label class="form-label" for="${id:password}">
							${tr:Lms.password}
						</label>
						${password class="form-control"}
						<div class="invalid-feedback">
							${password-info}
						</div>
					</div>
					<div class="col-12">
						<div class="form-check">
							${remember-me class="form-check-input"}
							<label class="form-check-label" for="${id:remember-me}">
								${tr:Lms.Auth.remember-me}
							</label>
						</div>
					</div>
					<div class="col-12">
						${login-btn class="btn btn-primary"}
					</div>
				</div>
			</div>
		</form>
	</div>
</message>

</messages>
